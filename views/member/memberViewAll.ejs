<%- include("../includes/header.ejs", {title:"Member - View All"} );%>

<h1>Members</h1>
<a href="/member/add">Add a New Member</a> <br />

<br />

<table border="1">
    <tr><th>Name</th><th>Birthday</th><th>Biography</th><th>Action</th></tr>
    <% for(var i=0; result.length > i; i++ ) { %>
    <tr>
        <td><a href="/member/?member_id=<%= result[i].member_id %>"><%= result[i].first_name %> <%= result[i].last_name%></a></td>
        <td><%= result[i].birthday %></td>
        <td> <%= result[i].biography %></td>
        <td><form action="/member/delete/">
                <input type="hidden" name="member_id" id="member_id" value="<%= result[i].member_id %>" />
                <input type="submit" value="Delete"/>
            </form>
        </td>
    </tr>
    <% } %>
</table>
